<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="egov.propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/egovframework/egovProps/globals.properties</value>
            </list>
        </property>
    </bean>

    <!-- 실행환경에서 빈이름 참조(EgovAbstractDAO) -->
    <bean id="egov.lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler" lazy-init="true" />

    <!-- Oracle SqlMap setup for iBATIS Database Layer -->
    <bean id="egov.sqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocations">
            <list>
                <value>classpath:/egovframework/sqlmap/config/${Globals.DbType}/*.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSource"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>

    <!-- Oracle 통합디비 시설물#1 접속 -->
    <bean id="Tofac.SqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 ORACLE2 설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/Tofac/sql-map-config-tofac-buc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceTofac"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>

    <!-- Oracle 하이포털 접속 -->
    <bean id="Hiportal.SqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 ORACLE2 설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/Hiportal/sql-map-config-hiportal-buc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceHiportal"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>

    <!-- Oracle 시설물DB  SQL 설정-->
    <bean id="FacDB.sqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list>
                <value>classpath:/egovframework/sqlmap/config/FacDB/*.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourcefacDB"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>

    <!-- SMS 서비스 DB 접속 계정 -->
    <bean id="egov.mySqlSmsMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 MYSQL설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/mysqlSms/sql-map-config-mysqlSms-main-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceMysqlSms"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>

    <!-- Infra SMS(CPU,MEM,DISK)서버 DB 접속 계정 -->
    <bean id="egov.mySqlInfraSmsMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 MYSQL설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/mysqlInfraSms/sql-map-config-mysqlInfraSms-ifc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceMysqlInfraSms"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>
    
    <!-- Infra ESM241(CPU,MEM,DISK)서버 DB 접속 계정 -->
    <bean id="egov.infraEsm241MapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 MYSQL설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/Esm/sql-map-config-infraEsm241-ifc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceInfraEsm241"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>
    
    <!-- Infra ESM246(CPU,MEM,DISK)서버 DB 접속 계정 -->
    <bean id="egov.infraEsm246MapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 MYSQL설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/Esm/sql-map-config-infraEsm246-ifc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceInfraEsm246"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>
    
	<!--        IOT 서버 SQL 설정 -->
    <bean id="IOT.sqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list>
                <value>classpath:/egovframework/sqlmap/config/iot/sql-map-config-iot-fec-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceIOTsql"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>
    
    <!-- Oracle 연구정보 서버 접속 -->
    <bean id="Researchinfo.SqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
    <property name="configLocations">
            <list><!-- 해당 폴더에 ORACLE2 설정에 맞는 파일위치를 지정 //-->
                <value>classpath:/egovframework/sqlmap/config/Researchinfo/sql-map-config-researchinfo-buc-comm.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="egov.dataSourceResearchinfo"/>
        <property name="lobHandler" ref="egov.lobHandler"/>
    </bean>  
</beans>
