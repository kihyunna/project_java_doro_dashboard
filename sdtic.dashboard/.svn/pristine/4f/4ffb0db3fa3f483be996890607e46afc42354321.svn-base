    <!-- Infra ESM241(CPU,MEM,DISK)서버 DB 접속 계정 -->
    <alias name="dataSource-infraEsm241" alias="egov.dataSourceInfraEsm241"/>
    
    <!-- Infra ESM246(CPU,MEM,DISK)서버 DB 접속 계정 -->
    <alias name="dataSource-infraEsm246" alias="egov.dataSourceInfraEsm246"/>
    
    <!-- ORACLE 연구정보 서버  -->
    <alias name="dataSource-Researchinfo" alias="egov.dataSourceResearchinfo"/>

    <!-- Oracle -->
