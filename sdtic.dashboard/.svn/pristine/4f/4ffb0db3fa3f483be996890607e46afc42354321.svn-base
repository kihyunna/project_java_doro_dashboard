    <alias name="dataSource-${Globals.DbType}" alias="egov.dataSource"/>

    <!-- ORACLE 2번째 서버  -->
    <alias name="dataSource-Tofac" alias="egov.dataSourceTofac"/>
    <alias name="dataSource-Hiportal" alias="egov.dataSourceHiportal"/>

